<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:id="@+id/newsCard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentBack"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is title"
        android:textSize="16sp"
        android:layout_toRightOf="@id/articleImage"
        android:textColor="@color/white"
        android:id="@+id/articleTitle"
        android:layout_marginStart="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is timestamp"
        android:layout_below="@id/articleSource"
        android:layout_toRightOf="@id/articleImage"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:id="@+id/articleTimestamp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is source"
        android:textSize="12sp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/articleSource"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/articleImage"
        android:layout_below="@id/articleTitle"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:layout_centerVertical="true"
        android:id="@+id/articleImage"
        android:elevation="7dp"
        android:background="@drawable/round_card"
        />
    </RelativeLayout>


</androidx.cardview.widget.CardView>